#!/bin/sh
if [ $# = 0 ]
   then
   echo "usage: HOM_UOX_Gd157_AUTOlib_test.access directory" 1>&2
   exit 1
fi
MACH=`uname -s`
Sysx="`echo $MACH | cut -b -6`"
if [ $Sysx = "CYGWIN" ]; then
   MACH=`uname -o`
elif [ $Sysx = "Darwin" ]; then
   MACH=`uname -sm | sed 's/[ ]/_/'`
elif [ $Sysx = "SunOS" ]; then
   MACH=`uname -sm | sed 's/[ ]/_/'`
fi
if [ "$MACH" = "Linux" -o "$MACH" = "OSF1" -o "$MACH" = "Cygwin" -o "$MACH" = "SunOS_i86pc" \
-o "$MACH" = "Darwin_i386" -o "$MACH" = "Darwin_x86_64" -o "$MACH" = "Darwin_arm64" \
-o "$MACH" = "Linux_aarch64" ]
then 
  echo 'use little endian libraries'
  pos=$1/../../../libraries/l_endian
else
  echo 'use big endian libraries'
  pos=$1/../../../libraries/b_endian
fi
if [ -f "$pos"/draglibJeff3p1p1SHEM295.gz ]
   then
    echo 'gunzipping draglibJeff3p1p1SHEM295'
    chmod 755 "$pos"
    gunzip "$pos"/draglibJeff3p1p1SHEM295.gz
fi
if [ -f "$pos"/draglibJeff3p1p1SHEM281.gz ]
   then
    echo 'gunzipping draglibJeff3p1p1SHEM281'
    chmod 755 "$pos"
    gunzip "$pos"/draglibJeff3p1p1SHEM281.gz
fi
if [ -f "$pos"/draglibJeff3p1p1SHEM315.gz ]
   then
    echo 'gunzipping draglibJeff3p1p1SHEM315'
    chmod 755 "$pos"
    gunzip "$pos"/draglibJeff3p1p1SHEM315.gz
fi
if [ -f "$pos"/draglibJeff3p1p1SHEM295 ]
   then
    ln -s "$pos"/draglibJeff3p1p1SHEM295 J311_295 
fi
if [ -f "$pos"/draglibJeff3p1p1SHEM281 ]
   then
    ln -s "$pos"/draglibJeff3p1p1SHEM281 J311_281
fi
if [ -f "$pos"/draglibJeff3p1p1SHEM315 ]
   then
    ln -s "$pos"/draglibJeff3p1p1SHEM315 J311_315
fi
# dlibJ311295_Gd157_XSM is a limited micXS lib which only involves isotopes from HOM_UOX_Gd157 test case.
# It is tested in the HOM_UOX_Gd157_AUTOlib_test case to see if it improves estimation of Gd157 rates vs AUTO: and vs Serpent2.
#ln -s "$pos"/dlibJ311295_Gd157_XSM J311295Gd157
#  draglibJ311SHEM295_Gd157_finepy_XSM is a limited micXS lib which only involves isotopes from HOM_UOX_Gd157 test case, refined in lethargy.
#ln -s "$pos"/draglibJ311SHEM295_Gd157_finepy_XSM J311295Gd157F
#  draglibJ311SHEM295_finepy_XSM is a micXS lib equivalent to J311_295, refined in lethargy.
#ln -s "$pos"/draglibJ311SHEM295_finepy_XSM J311_295F

# attempting to use newer libraries, generated by njoy2012 upd 139 --> drglib_converter,
# which are in little endian format
# new_draglibJ311SHEM295_09122024_XSM is a micXS lib equivalent to J311_295, with more dilutions for Gd157. AUTO should be available.
ln -s "$pos"/new_draglibJ311SHEM295_09122024_XSM nJ311_295 
# new_draglibJ311SHEM295_fine_09122024_XSM is a micXS lib equivalent to J311_295, refined in lethargy, AUTO should be working with refined lethargy mesh.
ln -s "$pos"/new_draglibJ311SHEM295_fine_09122024_XSM nJ311_295F
# finer is even more refined in lethatgy !
ln -s "$pos"/new_draglibJ311SHEM295_finer_09122024_XSM nJ311_295FF


echo "reading xs in $pos"
ls -l
echo "HOM_UOX_Gd157_AUTOlib_test access script terminated"