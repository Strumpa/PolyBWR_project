#!/bin/sh
#
if [ $# = 0 ]
   then
   echo '$$$ ----- BWR_coupling.save : script begin' 1>&2
   exit 1
fi
echo '$$$ ----- BWR_coupling.save : script begin'
MACH=`uname -s`
Sysx="`echo $MACH | cut -b -6`"
if [ $Sysx = "CYGWIN" ]; then
   MACH=`uname -o`
elif [ $Sysx = "AIX" ]; then
   MACH=`uname -s`
else
   MACH=`uname -sm | sed 's/[ ]/_/'`
fi

cp *.ps ./BWR_Coupling_PyGan_*
cp _COMPO* ./BWR_Coupling_PyGan_*
cp -r BWR_Coupling_PyGan_* $1/"$MACH"/
echo '$$$ ----- BWR_coupling.save : script finish'